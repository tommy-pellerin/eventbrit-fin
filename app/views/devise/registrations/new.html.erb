
<div class="row mt-5">

  <div class="col-lg-6 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= render "devise/shared/error_messages", resource: resource %>

      <fieldset class="form-signin text-center p-5">
        <h1>Sign up</h1>
        <legend>Please sign up</legend>

      <!-- email -->
        <div class="form-group">
          <%= f.label :email , class:"form-label mt-4"%><br />
          <div class="js-form_message">
            <div class="input-group-prepend d-flex">
              <div class="input-group-prepend">
                <div class="form-control">logo</div>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Enter email" %>            
            </div>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password , class:"form-label mt-4"%><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="js-form_message">
            <div class="input-group-prepend d-flex">
              <div class="input-group-prepend">
                <div class="form-control">logo</div>
              </div>              
              <%= f.password_field :password, autocomplete: "new-password", autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Password" %>            
            </div>
          </div>
        </div>    
        <div class="form-group">
          <%= f.label :password_confirmation , class:"form-label mt-4"%><br />          
          <div class="js-form_message">
            <div class="input-group-prepend d-flex">
              <div class="input-group-prepend">
                <div class="form-control">logo</div>
              </div>              
              <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Password confirmation" %>            
            </div>
          </div>
        </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-success btn-lg submit-btn mt-4"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>

