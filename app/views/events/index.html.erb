
<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item">
        <div class="carousel-img-box">
          <img class="bd-placeholder-img"  height="100%" width="100%" src="assets/pexels-ksenia-chernaya-3951652.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"></img>
        </div>

        <div class="container">
          <div class="carousel-caption text-start">
            <h1>Example headline.</h1>
            <p>Some representative placeholder content for the first slide of the carousel.</p>
            <p><a class="btn btn-lg btn-primary" href="#">Create an event</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item active carousel-item-start">
        <div class="carousel-img-box">
          <img class="bd-placeholder-img" height="100%" width="100%" src="assets/pexels-oleksandr-p-3274551.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"></img>
        </div>
        <div class="container">
          <div class="carousel-caption">
            <h1>Another example headline.</h1>
            <p>Some representative placeholder content for the second slide of the carousel.</p>
            <p><a class="btn btn-lg btn-primary" href="#">Create an event</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item carousel-item-next carousel-item-start">
        <div class="carousel-img-box">
          <img class="bd-placeholder-img" height="100%" width="100%" src="assets/pexels-pixabay-433452.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"></img>
        </div>  
        <div class="container">
          <div class="carousel-caption text-end">
            <h1>One more for good measure.</h1>
            <p>Some representative placeholder content for the third slide of this carousel.</p>
            <p><a class="btn btn-lg btn-primary" href="#">Create an event</a></p>
          </div>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

   
    <div class="container mt-5">
      <!-- Example row of columns --> 
             
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @events.each do |event| %>
        
          <% if event.event_submission != nil && event.event_submission.validated == true %>
            <div class="col">
              <div class="card" style="width: 18rem;">
                
                  <%if event.photo_event.attached?%>
                    <%= image_tag event.photo_event, alt:'photo_event', class:"card-img-top"%>
                  <%else%>
                    <img class="card-img-top" src="assets/defaut.svg" alt="Card image cap">
                  <%end%>
                              
                <div class="card-body">
                  <h5 class="card-title"><%= event.title %></h5>                
                  <p>Description : <%= event.description %></p>
                  <p>Date de début : <%= event.start_date %></p>
                  <p>Durée : <%= event.duration %></p>
                  <p>Prix : <%= event.price %></p>
                  <p>Lieu : <%= event.location %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group ">
                      <a class="btn btn-primary" href="<%= event_path(event) %>" role="button">View details »</a>
                    </div>
                  </div>                 
                </div>
              </div>
            </div>
          <!--Condition to show event in validation--> 
          <% elsif event.event_submission != nil && event.event_submission.validated == false && event.event_submission.reviewed == false %>
            <div class="col">
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="images/defaut.svg" alt="Card image cap">
                  <div class="card-body">                    
                    <p class="card-text">L'envent est en cours de validation</p>                    
                    </div>                
                  </div>
                </div>
              </div>  
          <!--end if-->          
          <% end %>

        <!--end each-->
        <% end %> 
      </div>    
      <hr> 
    </div> <!-- /container -->
  
</main>
