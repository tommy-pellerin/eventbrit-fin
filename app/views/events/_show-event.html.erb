    <!-- add content here -->
    <div class="row my-5">
      <!-- column left add content here -->
      <div class="col col-lg-8">
        <h5>Title : <%= @event.title %></h5>
        <p>description : <%= @event.description %></p>
        <p>nombre d'inscrit : <%= @event.users.count %></p>
        <p>créateur : <%= @event.admin.first_name %></p>
        <p>date de début : <%= @event.start_date %></p>
        <p>date de fin : <%= @end_date %></p>
        <p>Lieu : <%= @event.location %></p>
        <p>prix : <%= @event.price %>€</p>
        <% if current_user == @event.admin %>
          <p><%= link_to "Destroy", event_path(@event), data: {turbo: true,turbo_method: :delete,turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %></p>
          <p><%= link_to "Mon espace evenement", event_attendances_path(@event.id), class:"btn btn-info" %></p>
        <% end %>
        <% if !is_admin?(@event)%>
          <p><%= link_to "Rejoindre l'événement", new_event_attendance_path(@event.id), class:"btn btn-primary" %></p>
        <% end %>
        
      </div>
    <!-- reservation botton on the right side -->
      <div class="col col-lg-4">
        <div class="position-sticky">
          <% if current_user == @event.admin %>
            <p><%= link_to "Destroy", event_path(@event), data: {turbo: true,turbo_method: :delete,turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %></p>
            <p><%= link_to "Mon espace evenement", event_attendances_path(@event.id), class:"btn btn-info" %></p>
          <% end %>
          <% if !is_admin?(@event)%>
            <p><%= link_to "Rejoindre l'événement", new_event_attendance_path(@event.id), class:"btn btn-primary" %></p>
          <% end %>
        </div>
      </div>

    </div>

    <!-- social media icons -->
    <div class="my-3">
      <div class="others-icones-container d-flex"> 
        <div class="rs-img-box">
          <a href="#"><img src="/assets/logo_facebook.png" alt="logo-facebook" width="100%" height="100%" class="rs-img"></a>
        </div>
        <div class="rs-img-box">
          <a href="#"><img src="/assets/logo_linkedin.png" alt="logo-linkedin" width="100%" height="100%" class="rs-img"></a>
        </div>
      </div>
    </div>         
  </section>
  
</div>